<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" android:orientation="vertical" android:layout_gravity="center">
    <Button
            android:text="Open Data Base"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/openBDButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="30dp"/>
    <Button
            android:text="Add A New Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/newNoteButton" android:textAlignment="center"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/colorPrimary"
            android:layout_margin="30dp"/>
    <Button
            android:text="Magic Buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lastNoteChangeButton"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/colorAccent"
            android:layout_margin="30dp" android:textAlignment="center"/>
</LinearLayout>